<resources>
    
    <style name="labels_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2.0</item>
        <item name="android:gravity">left|center_vertical</item>
        
        <item name="android:textColor">#343434</item> 
        <!-- <item name="android:typeface">monospace</item> -->
    </style>
    
    <style name="fields_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">8.0</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@drawable/field_bleach_white</item>
    </style>
    
    <style name="num_buttons_style">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/btn_gray</item>
    </style>
    
    <style name="prefix_buttons_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="reset_delete_buttons_style">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="rows_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>