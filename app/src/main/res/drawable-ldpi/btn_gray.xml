<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#d4d4d5"
                android:endColor="#a9a9a9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#343434" />
            
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <solid android:color="#ffffff" />
            <stroke
                android:width="2dp"
                android:color="#449def" />
            
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    
